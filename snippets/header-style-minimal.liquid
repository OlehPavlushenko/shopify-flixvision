<div class="header-main">
    <header class="header-wrap  d-flex align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-4 col-sm-4 col-md-4 col-lg-5 d-flex align-self-center minimal-social-col">
                    {% render 'social-list' %}
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-2 d-flex">
                    <div class="header__icon-open">
                        <a
                            class="js-menu-toggle focus-inset"
                            data-id="MegaMenu"
                            href="#MobileMenuOpen"
                            aria-label="{{ 'accessibility.menu_open' | t }}"
                        >
                            {% render 'icons-svg', icons: 'menu' %}
                        </a>
                    </div>
                    <span class="header__menu--overlay js-mobile-menu-overlay"></span>
                    <div class="header__logo-wrapper">
                        {% if request.page_type == 'index' %}
                            <h1 class="header__heading">
                                <a href="{{ routes.root_url }}" class="header__logo-link">
                                    {% if logo != blank %}
                                        {{
                                            logo
                                            | image_url: width: section.settings.width
                                            | image_tag:
                                                class: 'header__logo',
                                                widths: '50, 100, 150, 200, 250',
                                                height: logo_height,
                                                width: logo_width,
                                                alt: logo_alt
                                        }}
                                    {% else %}
                                        <span class="h2">{{ shop.name }}</span>
                                    {% endif %}
                                </a>
                            </h1>
                        {% else %}
                            <a href="{{ routes.root_url }}" class="header__logo-link">
                                {% if logo != blank %}
                                    {{
                                        logo
                                        | image_url: width: section.settings.width
                                        | image_tag:
                                            class: 'header__logo',
                                            widths: '50, 100, 150, 200, 250',
                                            height: logo_height,
                                            width: logo_width,
                                            alt: logo_alt
                                    }}
                                {% else %}
                                    <span class="h2">{{ shop.name }}</span>
                                {% endif %}
                            </a>
                        {% endif %}
                    </div>
                </div>
                <div class="col-6 col-sm-6 col-md-6 col-lg-5 icons-col text-right d-flex align-self-center justify-content-end">
                    {% render 'header-elements', blocks: blocks %}
                </div>
            </div>
        </div>
    </header>

    <div class="header-menu-outer">
        <div class="container">
            <div class="row">
                <div class="col-5 col-sm-5 col-md-2 col-lg-3 align-self-center justify-content-start d-flex minimal-logo-col">
                    <div class="header__logo-wrapper">
                        {% if request.page_type == 'index' %}
                            <h1 class="header__heading">
                                <a href="{{ routes.root_url }}" class="header__logo-link">
                                    {% if logo != blank %}
                                        {{
                                            logo
                                            | image_url: width: section.settings.width
                                            | image_tag:
                                                class: 'header__logo',
                                                widths: '50, 100, 150, 200, 250',
                                                height: logo_height,
                                                width: logo_width,
                                                alt: logo_alt
                                        }}
                                    {% else %}
                                        <span class="h2">{{ shop.name }}</span>
                                    {% endif %}
                                </a>
                            </h1>
                        {% else %}
                            <a href="{{ routes.root_url }}" class="header__logo-link">
                                {% if logo != blank %}
                                    {{
                                        logo
                                        | image_url: width: section.settings.width
                                        | image_tag:
                                            class: 'header__logo',
                                            widths: '50, 100, 150, 200, 250',
                                            height: logo_height,
                                            width: logo_width,
                                            alt: logo_alt
                                    }}
                                {% else %}
                                    <span class="h2">{{ shop.name }}</span>
                                {% endif %}
                            </a>
                        {% endif %}
                    </div>
                </div>
                <div class="col-1 col-sm-1 col-md-5 col-lg-6 align-self-center minimal-menu-col">
                    {% render 'header-navigation', menu: menu, blocks: blocks %}
                </div>
                <div class="col-6 col-sm-6 col-md-4 col-lg-3 align-self-center icons-col text-right d-flex justify-content-end minimal-elements-col">
                    {% render 'header-elements', blocks: blocks %}
                </div>
            </div>
        </div>
    </div>
</div>
