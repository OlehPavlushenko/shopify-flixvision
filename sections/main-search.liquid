            "label": "Image size",
            "options": [
                {
                    "value": "cropped",
                    "label": "Cropped"
                },
                {
                    "value": "landscape",
                    "label": "Landscape"
                },
                {
                    "value": "square",
                    "label": "Square"
                },
                {
                    "value": "portrait",
                    "label": "Portrait"
                },
                {
                    "value": "circle",
                    "label": "Circle"
                }
            ]
        },
        {
            "type": "header",
            "content": "Style options Post"
        },
        {
            "type": "color",
            "id": "bg_post_color",
            "label": "Background post color"
        },
        {
            "type": "color",
            "id": "title_post_color",
            "label": "Title post color"
        },

        {
            "type": "color",
