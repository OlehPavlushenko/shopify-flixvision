{% liquid
    assign blocks = section.blocks
    assign heading = section.settings.heading

    assign new_badge = settings.new_badge
    assign show_vendor = settings.show_vendor
    assign show_rating = settings.show_rating
    assign add_btn = settings.enable_add_btn
    assign btn = settings.btn
    assign variant_type = settings.variant
    assign prod_img_size = settings.prod_img_size
    assign secondary_image = settings.show_secondary_image
    assign notify_me = settings.notify_me
    assign price_variant = settings.price_variant

    assign columns_desktop = section.settings.columns_desktop
    assign columns_mobile = section.settings.columns_mobile

    assign bg_color = section.settings.bg_color | default: 'transparent'

    assign text_color = section.settings.text_color | default: 'inherit'
    assign title_color = section.settings.title_color | default: 'inherit'
    assign link_color = section.settings.link_color | default: 'inherit'

    assign content_alignment = section.settings.content_alignment
    assign full_width = section.settings.full_width

    assign width = section.settings.width
    assign pad_top = section.settings.padding_top
    assign pad_bot = section.settings.padding_bottom
%}

{% capture styles %}
    --background-color-featured-products: {{ bg_color }};
    --title-post-color-featured-products: {{ title_color }};
    --text-post-color-featured-products: {{ text_color }};
    --link-post-color-featured-products: {{ link_color }};

    --pad-top-featured-products: {{ pad_top }}px;
    --pad-bot-featured-products: {{ pad_bot }}px;
  {% endcapture %}

{%- assign styles = styles | strip_newlines -%}

{{ 'section-featured-products.css' | asset_url | stylesheet_tag }}
{{ 'component-card-products.css' | asset_url | stylesheet_tag }}

{% if blocks.size > 0 %}
    <div class="featured-products full_width--{{ full_width }} content--{{ content_alignment }}" style="{{ styles }}">
        <div class="page-width">
            {%- if heading != blank -%}
                <h3 class="featured-products__heading h3">
                    {{ heading | escape }}
                </h3>
            {%- endif -%}
            <ul class="featured-products__list columns__desktop--{{ columns_desktop }} columns__mobile--{{ columns_mobile }}">
                {%- for block in blocks -%}
                    {% liquid
                        assign product = block.settings.product
                        assign image_custom = block.settings.custom_image
                        assign fill_image = block.settings.fill_image
                    %}
                    <li class="featured-products__item">
                        {% render 'card-product',
                            product: product,
                            show_vendor: show_vendor,
                            show_rating: show_rating,
                            new_badge: new_badge,
                            show_quantity: false,
                            use_variant: price_variant,
                            variant_type: variant_type,
                            add_btn: add_btn,
                            btn: btn,
                            img_size: prod_img_size,
                            secondary_image: secondary_image,
                            notify_me: notify_me,
                            image_custom: image_custom,
                            fill: fill_image
                        %}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endif %}

{% schema %}
{
    "name": "Featured Products",
    "class": "index-section",
    "tag": "section",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "default": "Featured Products",
            "label": "Title"
        },
        {
            "type": "range",
            "id": "columns_desktop",
            "min": 2,
            "max": 4,
            "step": 1,
            "default": 4,
            "label": "Number of columns on desktop"
        },
        {
            "type": "select",
            "id": "columns_mobile",
            "default": "2",
            "label": "Number of columns on mobile",
            "options": [
                {
                    "value": "1",
                    "label": "1 column"
                },
                {
                    "value": "2",
                    "label": "2 columns"
                }
            ]
        },
        {
            "type": "paragraph",
            "content": "Style option"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color"
        },
        {
            "type": "color",
            "id": "title_color",
            "label": "Title color"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color"
        },
        {
            "type": "color",
            "id": "link_color",
            "label": "Link  color"
        },
        {
            "type": "select",
            "id": "prod_img_size",
            "label": "Image size",
            "options": [
                {
                    "value": "cropped",
                    "label": "Cropped"
                },
                {
                    "value": "landscape",
                    "label": "Landscape"
                },
                {
                    "value": "square",
                    "label": "Square"
                },
                {
                    "value": "portrait",
                    "label": "Portrait"
                },
                {
                    "value": "circle",
                    "label": "Circle"
                }
            ]
        },
        {
            "type": "checkbox",
            "id": "full_width",
            "default": false,
            "label": "Enabled full width?"
        },
        {
            "type": "range",
            "id": "width",
            "min": 1000,
            "max": 1800,
            "step": 40,
            "default": 1200,
            "unit": "px",
            "label": "Section Width"
        },
        {
            "type": "select",
            "id": "content_alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left",
            "label": "Text alignment"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 60,
            "step": 5,
            "unit": "px",
            "label": "Padding top",
            "default": 30
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 60,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom",
            "default": 30
        }
    ],
    "blocks": [
        {
            "name": "Product ",
            "type": "product_",
            "settings": [
                {
                    "type": "product",
                    "id": "product",
                    "label": "Product"
                },
                {
                    "type": "image_picker",
                    "id": "custom_image",
                    "label": "Image",
                    "info": "Custom image for the product instead of its featured image"
                },
                {
                    "type": "checkbox",
                    "id": "fill_image",
                    "default": false,
                    "label": "Fill Image"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured Products"
        }
    ]
}
{% endschema %}
