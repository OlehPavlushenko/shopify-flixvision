{{ 'section-featured-list-collections-menu.css' | asset_url | stylesheet_tag }}
<div class="featured-list-collections">
    <div class="featured-list-collections__content">
        <div class="featured-list-collections__box">
            {% render 'list-collections-style-block-menu', settings: section.settings, blocks: section.blocks %}
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Collections with menu",
    "tag": "section",
    "class": "index-section",
    "settings": [
        {
            "type": "text",
            "id": "collections_sub_heading",
            "default": "Image banner",
            "label": "Sub Heading"
        },
        {
            "type": "text",
            "id": "collections_title",
            "default": "Image banner",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "collections_text",
            "label": "Heading"
        },
        {
            "type": "select",
            "id": "head_alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left",
            "label": "Head Text alignment"
        },
        {
            "type": "range",
            "id": "columns_desktop",
            "min": 2,
            "max": 4,
            "step": 1,
            "default": 4,
            "label": "Number of columns on desktop"
        },
        {
            "type": "select",
            "id": "columns_mobile",
            "default": "2",
            "label": "Number of columns on mobile",
            "options": [
                {
                    "value": "1",
                    "label": "1 column"
                },
                {
                    "value": "2",
                    "label": "2 columns"
                }
            ]
        },
        {
            "type": "select",
            "id": "img_size",
            "label": "Image size",
            "options": [
                {
                    "value": "cropped",
                    "label": "Cropped"
                },
                {
                    "value": "landscape",
                    "label": "Landscape"
                },
                {
                    "value": "square",
                    "label": "Square"
                },
                {
                    "value": "portrait",
                    "label": "Portrait"
                },
                {
                    "value": "circle",
                    "label": "Circle"
                }
            ]
        },
        {
            "type": "select",
            "id": "content_alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left",
            "label": "Text alignment"
        },
        {
            "type": "paragraph",
            "content": "Style options"
        },
        {
            "type": "color",
            "id": "block_color",
            "label": "Background Color"
        },
        {
            "type": "color",
            "id": "sub_title_color",
            "label": "Sub Title color"
        },
        {
            "type": "color",
            "id": "title_color",
            "label": "Title color"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color"
        },
        {
            "type": "color",
            "id": "badge_text_color",
            "label": "Badge text color"
        },
        {
            "type": "checkbox",
            "id": "count_products",
            "default": true,
            "label": "Show count Products"
        },
        {
            "type": "checkbox",
            "id": "full_width",
            "default": false,
            "label": "Enabled full width?"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 60,
            "step": 5,
            "unit": "px",
            "label": "Padding top",
            "default": 30
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 60,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom",
            "default": 30
        }
    ],
    "blocks": [
        {
            "type": "collection",
            "name": "Collection",
            "settings": [
                {
                    "type": "collection",
                    "id": "featured_collections",
                    "label": "Featured Collections"
                },
                {
                    "type": "link_list",
                    "id": "collection_menu",
                    "label": "Collection Menu"
                },
                {
                    "type": "text",
                    "id": "button_label",
                    "label": "Button Label",
                    "default": "View All"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Collections with menu"
        }
    ]
}
{% endschema %}
