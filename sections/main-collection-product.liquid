{% liquid
    assign load_more = section.settings.load_more
    assign new_badge = section.settings.new_badge
    assign show_vendor = section.settings.show_vendor
    assign show_rating = section.settings.show_rating
    assign add_btn = section.settings.enable_add_btn
    assign btn = section.settings.btn
    assign variant_type = section.settings.variant
    assign prod_img_size = section.settings.prod_img_size

    assign price_variant = false
    if btn == 'quick'
        assign price_variant = true
    endif

    assign bg_color = section.settings.bg_color | default: 'transparent'

    assign text_color = section.settings.text_color | default: 'inherit'
    assign title_color = section.settings.title_color | default: 'inherit'
    assign link_color = section.settings.link_color | default: 'inherit'

    assign content_alignment = section.settings.content_alignment
    assign full_width = section.settings.full_width

    assign width = section.settings.width
    assign pad_top = section.settings.padding_top
    assign pad_bot = section.settings.padding_bottom
%}

{% capture styles %}
    --background-color-collections: {{ bg_color }};
    --title-post-color-collections: {{ title_color }};
    --text-post-color-collections: {{ text_color }};
    --link-post-color-collections: {{ link_color }};

    --width-collections: {{ width }}px;
    --pad-top-collections: {{ pad_top }}px;
    --pad-bot-collections: {{ pad_bot }}px;
{% endcapture %}

{%- assign styles = styles | strip_newlines -%}

{{ 'section-main-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
{{ 'component-rating.css' | asset_url | stylesheet_tag }}

<div class="main-collections full_width--{{ full_width }} content--{{ content_alignment }}" style="{{ styles }}">
    {%- paginate collection.products by section.settings.products_per_page -%}
        <div class="main-collections__wrapper {% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% endif %}">
            {{ 'component-facets.css' | asset_url | stylesheet_tag }}
            <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
            {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
                <aside
                    aria-labelledby="verticalTitle"
                    class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}"
                    id="main-collection-filters"
                    data-id="{{ section.id }}"
                >
                    {% render 'facets',
                        results: collection,
                        enable_filtering: section.settings.enable_filtering,
                        enable_sorting: section.settings.enable_sorting,
                        filter_type: section.settings.filter_type,
                        paginate: paginate
                    %}
                </aside>
            {%- endif -%}

            <div class="product-grid-container js-product-grid" id="ProductGridContainer">
                {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}
                {%- if section.settings.enable_sorting and section.settings.filter_type == 'vertical' -%}
                    <facet-filters-form class="facets facets-vertical-sort small-hide no-js-hidden">
                        <form class="facets-vertical-form" id="FacetSortForm">
                            <div class="facet-filters sorting caption">
                                <div class="facet-filters__field">
                                    <h5 class="facet-filters__label caption-large text-body">
                                        <label for="SortBy">{{ 'products.facets.sort_by_label' | t }}</label>
                                    </h5>
                                    <div class="select">
                                        {%- assign sort_by = collection.sort_by
                                            | default: collection.default_sort_by
                                        -%}
                                        <select
                                            name="sort_by"
                                            class="facet-filters__sort select__select caption-large"
                                            id="SortBy"
                                            aria-describedby="a11y-refresh-page-message"
                                        >
                                            {%- for option in collection.sort_options -%}
                                                <option
                                                    value="{{ option.value | escape }}"
                                                    {% if option.value == sort_by %}
                                                        selected="selected"
                                                    {% endif %}
                                                >
                                                    {{ option.name | escape }}
                                                </option>
                                            {%- endfor -%}
                                        </select>
                                    </div>
                                </div>
                                <noscript>
                                    <button type="submit" class="facets__button-no-js button button--secondary">
                                        {{ 'products.facets.sort_button' | t }}
                                    </button>
                                </noscript>
                            </div>

                            <div class="product-count-vertical light" role="status">
                                <h5 class="product-count__text text-body">
                                    <span id="ProductCountDesktop">
                                        {%- if collection.results_count -%}
                                            {{
                                                'templates.search.results_with_count'
                                                | t: terms: collection.terms, count: collection.results_count
                                            }}
                                        {%- elsif collection.products_count == collection.all_products_count -%}
                                            {{
                                                'products.facets.product_count_simple'
                                                | t: count: collection.products_count
                                            }}
                                        {%- else -%}
                                            {{
                                                'products.facets.product_count'
                                                | t:
                                                    product_count: collection.products_count,
                                                    count: collection.all_products_count
                                            }}
                                        {%- endif -%}
                                    </span>
                                </h5>
                                <div class="loading-overlay__spinner">
                                    <svg
                                        aria-hidden="true"
                                        focusable="false"
                                        class="spinner"
                                        viewBox="0 0 66 66"
                                        xmlns="http://www.w3.org/2000/svg"
                                    >
                                        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                                    </svg>
                                </div>
                            </div>
                        </form>
                        <grid-list-view class="main-collections__view mobile-style">
                            <span>{{- 'products.facets.view_as' | t -}}</span>
                            <a
                                class="active main-collections__grid js-view-button js-grid-view js-tooltip"
                                href="#"
                                title="{{- 'products.facets.grid' | t -}}"
                                data-view="grid"
                            >
                                {%- render 'icons-svg', icons: 'grid' -%}
                                {%- render 'icons-svg', icons: 'grid' -%}
                                {%- render 'icons-svg', icons: 'grid' -%}
                                {%- render 'icons-svg', icons: 'grid' -%}
                            </a>
                            <a
                                class="main-collections__list js-view-button js-list-view js-tooltip"
                                href="#"
                                title="{{- 'products.facets.list' | t -}}"
                                data-view="list"
                            >
                                {%- render 'icons-svg', icons: 'list' -%}
                            </a>
                        </grid-list-view>
                    </facet-filters-form>
                {%- endif -%}
                {%- if collection.products.size == 0 -%}
                    <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
                        <div class="loading-overlay gradient"></div>
                        <div class="title-wrapper center">
                            <h2 class="title title--primary">
                                {{ 'sections.collection_template.empty' | t -}}
                                <br>
                                {{
                                    'sections.collection_template.use_fewer_filters_html'
                                    | t: link: collection.url, class: 'underlined-link link'
                                }}
                            </h2>
                        </div>
                    </div>
                {%- else -%}
                    <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %} collection__grid">
                        <div class="loading-overlay gradient"></div>

                        <ul
                            id="product-grid"
                            data-id="{{ section.id }}"
                            class="
                                template-main-collection__list
                                grid product-grid columns-mobile--{{ section.settings.columns_mobile }}
                                columns--{{ section.settings.columns_desktop }}
                            "
                        >
                            {%- for product in collection.products -%}
                                {% assign lazy_load = false %}
                                {%- if forloop.index > 2 -%}
                                    {%- assign lazy_load = true -%}
                                {%- endif -%}
                                <li class="grid__item template-main-collection__item">
                                    {% render 'card-product',
                                        product: product,
                                        show_vendor: show_vendor,
                                        show_rating: show_rating,
                                        new_badge: new_badge,
                                        show_quantity: false,
                                        use_variant: price_variant,
                                        variant_type: variant_type,
                                        add_btn: add_btn,
                                        btn: btn,
                                        img_size: prod_img_size,
                                        image_custom: false,
                                        fill: false
                                    %}
                                </li>
                            {%- endfor -%}
                        </ul>

                        {%- if paginate.pages > 1 -%}
                            {%- liquid
                                assign current_count = paginate.current_offset | plus: section.settings.products_per_page
                                if current_count > collection.all_products_count
                                    assign current_count = collection.all_products_count
                                endif
                            -%}

                            {% if load_more %}
                                <collection-load-more class="main-collection__load-more-container main-collection__box js-collection-load-more-container">
                                    <button
                                        type="button"
                                        class="main-collection__load-more-button button button--secondary button--outline js-collection-load-more{% if current_count == collection.all_products_count %} hidden{% endif %}"
                                    >
                                        {{ 'products.load_more' | t }}
                                    </button>

                                    <p class="main-collection__product-count" role="status">
                                        {{
                                            'products.product_count_html'
                                            | t: product_count: current_count, count: collection.products_count
                                        }}
                                    </p>
                                </collection-load-more>
                            {% else %}
                                <div class="main-collection__box">
                                    {% render 'pagination', paginate: paginate %}
                                    <p class="main-search__product-count" role="status">
                                        {{
                                            'products.product_count_html'
                                            | t: product_count: current_count, count: collection.products_count
                                        }}
                                    </p>
                                </div>
                            {% endif %}
                        {%- endif -%}
                    </div>
                {%- endif -%}
            </div>
        </div>
    {%- endpaginate -%}
</div>
<script src="{{ 'main-collection.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'vanilla-tooltip.min.js' | asset_url }}" defer="defer"></script>
{% schema %}
{
    "name": "t:sections.main-collection-product-grid.name",
    "class": "section",
    "settings": [
        {
            "type": "checkbox",
            "id": "load_more",
            "label": "Use load more",
            "default": false
        },
        {
            "type": "range",
            "id": "products_per_page",
            "min": 6,
            "max": 24,
            "step": 1,
            "default": 16,
            "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
        },
        {
            "type": "range",
            "id": "columns_desktop",
            "min": 3,
            "max": 5,
            "step": 1,
            "default": 4,
            "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
        },
        {
            "type": "checkbox",
            "id": "full_width",
            "default": false,
            "label": "Enabled full width?"
        },
        {
            "type": "range",
            "id": "width",
            "min": 1000,
            "max": 1800,
            "step": 40,
            "default": 1200,
            "unit": "px",
            "label": "Section Width"
        },
        {
            "type": "select",
            "id": "content_alignment",
            "options": [
                {
                    "value": "left",
                    "label": "Left"
                },
                {
                    "value": "center",
                    "label": "Center"
                },
                {
                    "value": "right",
                    "label": "Right"
                }
            ],
            "default": "left",
            "label": "Text alignment"
        },
        {
            "type": "header",
            "content": "t:sections.main-collection-product-grid.settings.header__3.content"
        },
        {
            "type": "range",
            "id": "new_badge",
            "min": 10,
            "max": 100,
            "step": 1,
            "default": 10,
            "unit": "day",
            "label": "'New' products badge",
            "info": "Number of days for which the product is considered as \"New\""
        },
        {
            "type": "checkbox",
            "id": "show_secondary_image",
            "default": false,
            "label": "t:sections.main-collection-product-grid.settings.show_secondary_image.label"
        },
        {
            "type": "checkbox",
            "id": "enable_add_btn",
            "default": false,
            "label": "Enable add to cart button"
        },
        {
            "type": "select",
            "id": "btn",
            "default": "details",
            "label": "Link or Quick add to cart",
            "options": [
                {
                    "value": "quick",
                    "label": "Quick add to cart"
                },
                {
                    "value": "details",
                    "label": "Details"
                }
            ]
        },
        {
            "type": "select",
            "id": "variant",
            "default": "pills",
            "label": "Variant picker type",
            "options": [
                {
                    "value": "pills",
                    "label": "Pills"
                },
                {
                    "value": "pills_color_images",
                    "label": "Pills color images"
                }
            ]
        },
        {
            "type": "select",
            "id": "prod_img_size",
            "label": "Image size",
            "options": [
                {
                    "value": "cropped",
                    "label": "Cropped"
                },
                {
                    "value": "landscape",
                    "label": "Landscape"
                },
                {
                    "value": "square",
                    "label": "Square"
                },
                {
                    "value": "portrait",
                    "label": "Portrait"
                },
                {
                    "value": "circle",
                    "label": "Circle"
                }
            ]
        },
        {
            "type": "checkbox",
            "id": "show_vendor",
            "default": false,
            "label": "t:sections.main-collection-product-grid.settings.show_vendor.label"
        },
        {
            "type": "checkbox",
            "id": "show_rating",
            "default": false,
            "label": "t:sections.main-collection-product-grid.settings.show_rating.label",
            "info": "t:sections.main-collection-product-grid.settings.show_rating.info"
        },
        {
            "type": "header",
            "content": "t:sections.main-collection-product-grid.settings.header__1.content"
        },
        {
            "type": "checkbox",
            "id": "enable_filtering",
            "default": true,
            "label": "t:sections.main-collection-product-grid.settings.enable_filtering.label",
            "info": "t:sections.main-collection-product-grid.settings.enable_filtering.info"
        },
        {
            "type": "select",
            "id": "filter_type",
            "options": [
                {
                    "value": "vertical",
                    "label": "t:sections.main-collection-product-grid.settings.filter_type.options__2.label"
                },
                {
                    "value": "drawer",
                    "label": "t:sections.main-collection-product-grid.settings.filter_type.options__3.label"
                }
            ],
            "default": "vertical",
            "label": "t:sections.main-collection-product-grid.settings.filter_type.label",
            "info": "t:sections.main-collection-product-grid.settings.filter_type.info"
        },
        {
            "type": "checkbox",
            "id": "enable_sorting",
            "default": true,
            "label": "t:sections.main-collection-product-grid.settings.enable_sorting.label"
        },
        {
            "type": "header",
            "content": "t:sections.main-collection-product-grid.settings.header_mobile.content"
        },
        {
            "type": "select",
            "id": "columns_mobile",
            "default": "2",
            "label": "t:sections.main-collection-product-grid.settings.columns_mobile.label",
            "options": [
                {
                    "value": "1",
                    "label": "t:sections.main-collection-product-grid.settings.columns_mobile.options__1.label"
                },
                {
                    "value": "2",
                    "label": "t:sections.main-collection-product-grid.settings.columns_mobile.options__2.label"
                }
            ]
        },
        {
            "type": "header",
            "content": "Style options Product"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color"
        },
        {
            "type": "color",
            "id": "title_color",
            "label": "Title color"
        },
        {
            "type": "color",
            "id": "text_color",
            "label": "Text color"
        },
        {
            "type": "color",
            "id": "link_color",
            "label": "Link  color"
        },
        {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 60,
            "step": 5,
            "unit": "px",
            "label": "Padding top",
            "default": 30
        },
        {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 60,
            "step": 5,
            "unit": "px",
            "label": "Padding bottom",
            "default": 30
        }
    ]
}
{% endschema %}
