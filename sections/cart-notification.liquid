<div
    class="modal js-cart-notification"
    tabindex="-1"
    role="dialog"
>
    <svg
        aria-hidden="true"
        focusable="false"
        role="presentation"
        class="spinner"
        viewBox="0 0 66 66"
        xmlns="http://www.w3.org/2000/svg"
    >
        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
    </svg>
    <div class="modal__dialog">
        <div class="modal__content">
            <div class="modal__body">
                <div class="modal__indent">
                    <div class="modal__box">
                        <div class="modal__media-wrapper">
                            <div class="modal__media media">
                                <img
                                    class="modal__image media__image js-cart-notification-image"
                                    src=""
                                    alt="Cart"
                                    width="100"
                                    height="100"
                                    loading="lazy"
                                >
                            </div>
                        </div>
                        <h5 class="modal__title js-cart-notification-title">Droubook space gray</h5>
                    </div>
                    <p class="modal__msg">
                        {% render 'icons-svg', icons: 'check' -%}
                        Added to cart successfully!
                    </p>
                    <div class="modal__button">
                        <a href="/collections/all" class="button button--link js-modal-close">
                            {{- 'products.product.continue_shopping' | t -}}
                        </a>
                        <a href="/checkout" class="button">Checkout</a>
                    </div>
                </div>
                <div class="modal__close">
                    <button
                        type="button"
                        class="modal__close-btn js-modal-close"
                        data-dismiss="modal"
                        aria-hidden="true"
                    >
                        {% render 'icons-svg', icons: 'close' %}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
