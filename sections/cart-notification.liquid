<div
    class='modal js-cart-notification'
    tabindex='-1'
    role='dialog'
>
    <svg
        aria-hidden='true'
        focusable='false'
        role='presentation'
        class='spinner'
        viewBox='0 0 66 66'
        xmlns='http://www.w3.org/2000/svg'
    >
        <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
    </svg>
    <div class='modal__dialog'>
        <div class='modal__content'>
            <div class='modal__body'>
                <div class='modal__indent'>
                    <div class='modal__box'>
                        <div class='modal__media-wrapper'>
                            <div class='modal__media media'>
                                <img
                                    class='modal__image media__image js-cart-notification-image'
                                    src='//cdn.shopify.com/s/files/1/0129/6262/7684/products/product09.jpg?v=1575828577&width=300'
                                    alt=''
                                    loading='lazy'
                                >
                            </div>
                        </div>
                        <h5 class='modal__title js-cart-notification-title'>Droubook space gray</h5>
                    </div>
                    <p class='modal__msg'><span class='fa fa-check-circle'></span>Added to cart successfully!</p>
                    <div class='modal__button'>
                        <a href='/collections/all' class='button button--link js-modal-close'>Continue Shopping</a>
                        <a href='/checkout' class='button'>Checkout</a>
                    </div>
                </div>
                <div class='modal__close'>
                    <button
                        type='button'
                        class='modal__close-btn js-modal-close'
                        data-dismiss='modal'
                        aria-hidden='true'
                    >
                        <svg
                            class='icon icon-close'
                            xmlns='http://www.w3.org/2000/svg'
                            width='18'
                            height='18'
                            viewBox='0 0 18 18'
                            fill='none'
                        >
                            <path d="M0.9 -2.14327e-05L0 0.899979L17.1 18L18 17.1L0.9 -2.14327e-05Z" fill="black"></path>
                            <path d="M17.1 3.81589e-05L0 17.1L0.9 18L18 0.900038L17.1 3.81589e-05Z" fill="black"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
