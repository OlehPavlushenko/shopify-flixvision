{% liquid
    assign bg_color = section.settings.background_color
    assign title_color = section.settings.title_color
    assign text_color = section.settings.text_color
    assign link_color = section.settings.link_color
    assign link_hover_color = section.settings.link_hover_color
    assign divider_color = section.settings.divider_color
    assign social_icon_color = section.settings.social_icon_color
    assign pad_top = section.settings.padding_top
    assign pad_bot = section.settings.padding_bottom
    assign bg_color_copyright = section.settings.background_color_copyright
    assign text_color_copyright = section.settings.text_color_copyright
    assign link_color_copyright = section.settings.link_color_copyright
    assign link_hover_color_copyright = section.settings.link_hover_color_copyright
    assign pad_top_copyright = section.settings.padding_top_copyright
    assign pad_bot_copyright = section.settings.padding_bottom_copyright
    assign blocks = section.blocks
%}

{% capture styles %}
--footer-background-color: {{ bg_color }};
--footer-title-color: {{ title_color }};
--footer-text-color: {{ text_color }};
--footer-link-color: {{ link_color }};
--footer-link-hover-color: {{ link_hover_color }};
--footer-divider-color: {{ divider_color }};
--footer-social-icon-color: {{- social_icon_color }};
--footer-pad-top: {{ pad_top }}px;
--footer-pad-bot: {{ pad_bot }}px;
--copyright-background-color: {{ bg_color_copyright }};
--copyright-text-color: {{ text_color_copyright }};
--copyright-link-color: {{ link_color_copyright }};
--copyright-link-hover-color: {{ link_hover_color_copyright }};
--copyright-pad-top: {{ pad_top_copyright }}px;
--copyright-pad-bot: {{ pad_bot_copyright }}px;
{% endcapture %}

{% assign styles = styles | strip_newlines %}

