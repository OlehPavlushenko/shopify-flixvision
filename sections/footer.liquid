{{ 'component-footer.css' | asset_url | stylesheet_tag }}

<footer class='footer' style='{{ styles }}'>
    <div class='footer__row'>
        <div class='footer__wrapper page-width'>
            <div class='footer__grid'>
                {% for block in blocks %}
                    {% case block.type %}
                        {% when 'linklist' %}
                            {% liquid
                                assign linklist = block.settings.links
                                assign width = block.settings.column_link
                            %}

                            <accordion-element class='footer__item footer__item-size--{{ width }}'>
                                <details class='footer__item--links' open>
                                    <summary class='h3 footer__title js-accordion-toggle' tabindex='0'>
                                        {{ linklists[linklist].title }}
                                        <i class='footer_trigger'>
                                            {% render 'icon-plus' %}
                                            {% render 'icon-minus' %}
                                        </i>
                                    </summary>
                                    <ul class='footer__block footer__block-links js-accordion-content' tabindex='-1'>
                                        {% for link in linklists[linklist].links %}
                                            <li class='footer__block--item footer__block-links--item{% if link.active == true %} active{% endif %}'>
                                                <a href='{{ link.url }}'>{{ link.title }}</a>
                                            </li>
                                        {% endfor %}
                                    </ul>
                                </details>
                            </accordion-element>

                        {% when 'contacts' %}
                            {% liquid
                                assign title = block.settings.contacts_title
                                assign name = block.settings.contacts_name
                                assign address = block.settings.contacts_address
                                assign phone = block.settings.contacts_phone
                                assign email = block.settings.contacts_email
                                assign time = block.settings.contacts_time
                                assign width = block.settings.column_contact
                            %}

                            <accordion-element class='footer__item footer__item-size--{{ width }}'>
                                <details class='footer__item--contacts' open>
                                    <summary class='h3 footer__title js-accordion-toggle' tabindex='0'>
                                        {{ title | escape }}
                                        <i class='footer_trigger'>
                                            {% render 'icon-plus' %}
                                            {% render 'icon-minus' %}
                                        </i>
                                    </summary>
                                    <div class='footer__block js-accordion-content' tabindex='-1'>
                                        {% if name.size > 0 %}
                                            <p class='footer__contact-name'>
                                                <i class='fa fa-home'></i>
                                                {{ name | escape }}
                                            </p>
                                        {% endif %}

                                        {% if address.size > 0 %}
                                            <p class='footer__contact-address'>
                                                <i class='fa fa-map-pin'></i>
                                                {{ address | escape }}
                                            </p>
                                        {% endif %}

                                        {% if phone.size > 0 %}
                                            <p class='footer__contact-phone'>
                                                <a href='tel:{{ phone | escape }}'>
                                                    <i class='fa fa-volume-control-phone'></i>
                                                    {{ phone | escape -}}
                                                </a>
                                            </p>
                                        {% endif %}

                                        {% if email.size > 0 %}
                                            <p class='footer__contact-email'>
                                                <a href='mailto:{{ email | escape }}'>
                                                    <i class='fa fa-envelope'></i>
                                                    {{ email | escape -}}
                                                </a>
                                            </p>
                                        {% endif %}

                                        {% if time.size > 0 %}
                                            <span class='footer__contact-time'>
                                                <i class='fa fa-calendar'></i>
                                                {{ time | escape -}}
                                            </span>
                                        {% endif %}
                                    </div>
                                </details>
                            </accordion-element>

                        {% when 'prod-list' %}
                            {% liquid
                                assign title = block.settings.prod_title
                                assign collection = collections[block.settings.prod_collection]
                                assign limit = block.settings.prod_limit
                                assign show_vendor = block.settings.prod_show_vendor
                                assign show_image = block.settings.prod_show_image
                                assign img_size = block.settings.prod_img_size
                                assign view_all = block.settings.show_view_all
                                assign width = block.settings.column_prod
                            %}

                            <accordion-element class='footer__item footer__item-size--{{ width }}'>
                                <details class='footer__item--products' open>
                                    {% if title != blank %}
                                        <summary class='h3 footer__title js-accordion-toggle' tabindex='0'>
                                            {{ title | escape }}
                                            <i class='footer_trigger'>
                                                {% render 'icon-plus' %}
                                                {% render 'icon-minus' %}
                                            </i>
                                        </summary>
                                    {% endif %}
                                    <div class='footer__block js-accordion-content' tabindex='-1'>
                                        <div class='footer__block--grid'>
                                            {% for product in collection.products limit: limit %}
                                                <div class='footer__grid--item footer-product-post'>
                                                    {% render 'footer-product-listing',
                                                        card_product: product,
                                                        show_vendor: show_vendor,
                                                        show_image: show_image,
                                                        image_size: img_size
                                                    %}
                                                </div>
                                            {% endfor %}
                                        </div>
                                        {% if view_all %}
                                            <div class='footer__view-all'>
                                                <a href='{{ collection.url }}' class='button button--link'>
                                                    {{ 'sections.footer.view_all' | t }}
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </details>
                            </accordion-element>

                        {% when 'blog-list' %}
                            {% liquid
                                assign title = block.settings.blog_title
                                assign blog = blogs[block.settings.blog]
                                assign limit = block.settings.post_limit
                                assign show_date = block.settings.blog_show_date
                                assign show_image = block.settings.blog_show_image
                                assign img_size = block.settings.blog_img_size
                                assign view_all = block.settings.show_view_all
                                assign width = block.settings.column_blog
                            %}

                            <accordion-element class='footer__item footer__item-size--{{ width }}'>
                                <details class='footer__item--blog' open>
                                    {% if title != blank %}
                                        <summary class='h3 footer__title js-accordion-toggle' tabindex='0'>
                                            {{ title | escape }}
                                            <i class='footer_trigger'>
                                                {% render 'icon-plus' %}
                                                {% render 'icon-minus' %}
                                            </i>
                                        </summary>
                                    {% endif %}
                                    <div class='footer__block js-accordion-content' tabindex='-1'>
                                        <div class='footer__block--grid'>
                                            {% for article in blog.articles limit: limit %}
                                                <div class='footer__grid--item footer-blog-post'>
                                                    {% render 'footer-blog-listing',
                                                        article: article,
                                                        show_date: show_date,
                                                        show_image: show_image,
                                                        image_size: img_size
                                                    %}
                                                </div>
                                            {% endfor %}
                                        </div>
                                        {% if view_all %}
                                            <div class='footer__view-all'>
                                                <a href='{{ blog.url }}' class='button button--link'>
                                                    {{ 'sections.footer.view_all' | t }}
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </details>
                            </accordion-element>

                        {% when 'newsletter' %}
                            {% liquid
                                assign title = block.settings.heading
                                assign subheading = block.settings.subheading
                                assign width = block.settings.column_news
                            %}

                            <accordion-element class='footer__item footer__item-size--{{ width }}'>
                                <details
                                    class='footer__item--newsletter'
                                    data-section-id='{{ section.id }}'
                                    data-section-type='newsletter-section'
                                    open
                                >
                                    {% if title != blank %}
                                        <summary class='h3 footer__title js-accordion-toggle' tabindex='0'>
                                            {{ title | escape }}
                                            <i class='footer_trigger'>
                                                {% render 'icon-plus' %}
                                                {% render 'icon-minus' %}
                                            </i>
                                        </summary>
                                    {% endif %}
                                    <div class='footer__block footer__newsletter js-accordion-content' tabindex='-1'>
                                        {% if subheading != blank %}
                                            <div class='footer__newsletter-subheading'>
                                                {{ subheading }}
                                            </div>
                                        {% endif %}
                                        {% form 'customer',
                                            id: 'ContactFooter',
                                            class: 'footer__newsletter-form js-newsletter-form'
                                        %}
                                            <input
                                                type='hidden'
                                                name='contact[tags]'
                                                value='newsletter'
                                            >

                                            {% capture newsletter_button %}
                                                <button
                                                type="submit"
                                                class="footer__newsletter-button"
                                                name="commit"
                                                aria-label="{{ 'sections.newsletter.button' | t }}">
                                                {% render 'icon-arrow' %}
                                                </button>
                                            {% endcapture %}

                                            {% liquid
                                                assign input_id = 'NewsletterForm--' | append: section.id
                                                assign input_label = 'sections.newsletter.label' | t
                                                assign input_placeholder = 'sections.newsletter.placeholder' | t

                                                render 'input', mod_input_id: input_id, mod_input_name: 'contact[email]', mod_input_type: 'email', mod_input_label: input_label, mod_input_placeholder: input_placeholder, mod_is_required: true, mod_autocomplete: 'email', mod_custom_html: newsletter_button, mod_custom_input_classes: 'js-newsletter-email'

                                                if form.errors
                                                    assign error_message = form.errors.translated_fields.email
                                                    assign error_message_id = form.id | append: '-error'

                                                    render 'error-message', mod_message: error_message, mod_is_input: true, mod_id: error_message_id

                                                elsif form.posted_successfully?
                                                    assign success_message_id = form.id | append: '-success'
                                                    assign form_success_message = 'sections.newsletter.success' | t

                                                    render 'success-message', mod_message: form_success_message, mod_id: success_message_id
                                                endif
                                            %}
                                        {% endform %}
                                    </div>
                                </details>
                            </accordion-element>
                        {% when 'about' %}
                            {% liquid
                                assign title = block.settings.about_title
                                assign subheading = block.settings.subheading
                                assign text = block.settings.about_text
                                assign width = block.settings.column_about
                                assign image = block.settings.about_image
                                assign img_size = block.settings.about_img_size
                                assign img_width = block.settings.about_img_width
                            %}

                            {% capture styles %}
                            --footer-image-width: {{ img_width }}%;
                            {% endcapture %}

                            {% assign styles = styles | strip_newlines %}

                            <accordion-element class='footer__item footer__item-size--{{ width }}'>
                                <details
                                    class='footer__item--about'
                                    style='{{ styles }}'
                                    open
                                >
                                    {% if title != blank %}
                                        <summary class='h3 footer__title js-accordion-toggle' tabindex='0'>
                                            {{ title | escape }}
                                            <i class='footer_trigger'>
                                                {% render 'icon-plus' %}
                                                {% render 'icon-minus' %}
                                            </i>
                                        </summary>
                                    {% endif %}
                                    <div
                                        class='footer__block footer__about js-accordion-content'
                                        tabindex='-1'
                                    >
                                        {% if image != blank %}
                                            <div class='footer__about--wrapper'>
                                                <picture class='footer__about--media media media__size--{{ img_size }}'>
                                                    {% render 'image',
                                                        image_box: image,
                                                        image_box_class: 'footer__about--image'
                                                    %}
                                                </picture>
                                            </div>
                                        {% endif %}
                                        {% if text != blank %}
                                            <div class='footer__about--text'>{{ text }}</div>
                                        {% endif %}
                                        <div class='footer__about--social'>
                                            {% render 'social-list' %}
                                        </div>
                                    </div>
                                </details>
                            </accordion-element>
                        {% when 'divider' %}
                            {% liquid
                                assign column_width = block.settings.column_divider
                                assign marg_top = block.settings.marg_top
                                assign marg_bot = block.settings.margin_bottom
                            %}

                            {% capture styles %}
                            --footer-marg-top: {{- marg_top -}}px;
                            --footer-marg-bot: {{- marg_bot -}}px;
                            {% endcapture %}

                            {% assign styles = styles | strip_newlines %}

                            <div class='footer__item footer__item-size--{{ column_width }}' style='{{ styles }}'>
                                <div class='footer-item-divider'>
                                    <span class='visually-hidden'>{{ 'sections.footer.divider' | t }}</span>
                                </div>
                            </div>
                    {% endcase %}
                {% endfor %}
            </div>
        </div>
    </div>

    <div class='copyright__row'>
        <div class='copyright__wrapper page-width'>
            <div class='copyright__grid'>
                {% if section.settings.payment_icons_toggle %}
                    <div class='copyright__text copyright__has--{{ section.settings.payment_icons_toggle }}'>
                        ©{{ shop.name }}.
                        {% if section.settings.powered_toggle %}
                            {{ powered_by_link }}
                        {% endif %}
                    </div>
                {% else %}
                    <div class='footer__text'>
                        ©{{ shop.name }}.
                        {% if section.settings.powered_toggle %}
                            {{ powered_by_link }}
                        {% endif %}
                    </div>
                {% endif %}

                {% if section.settings.payment_icons_toggle %}
                    {% assign payment_icons = 'cc-amex|cc-diners-club|cc-discover|cc-jcb|cc-mastercard|cc-paypal|cc-stripe|cc-visa|google-wallet'
                        | split: '|'
                    %}
                    <div class='copyright__payments'>
                        <ul class='copyright__payments--icons'>
                            {% for i in payment_icons %}
                                <li>
                                    <i class='fa fa-{{ i }}' aria-hidden='true'></i>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
    <scroll-up class='footer__scroll-up button button--secondary' aria-label='{{ 'sections.footer.scroll_up' | t }}'>
        <span class='fa fa-angle-up' aria-hidden='true'></span>
    </scroll-up>
</footer>

<script src='{{ 'accordion-element.js' | asset_url }}' defer='defer'></script>
<script src='{{ 'scroll-up.js' | asset_url }}' defer='defer'></script>

